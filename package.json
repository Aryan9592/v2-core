{
  "private": true,
  "dependencies": {},
  "scripts": {
    "lint:check": "yarn lint:sol:check && yarn prettier:check",
    "lint:write": "yarn lint:sol:write && yarn prettier:write",
    "lint:sol:check": "forge fmt --check && yarn solhint \"{src,test}/**/*.sol\"",
    "lint:sol:write": "forge fmt && yarn solhint --fix",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "test": "yarn --workspaces --if-present test",
    "coverage": "yarn --workspaces --if-present coverage"
  },
  "devDependencies": {
    "lcov-badge-generator": "1.0.5",
    "prettier": "2.8.4",
    "solhint": "3.4.0"
  },
  "workspaces": [
    "core/*",
    "products/*",
    "utils/contracts/*"
  ]
}
